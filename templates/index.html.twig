{% extends 'base.html.twig' %}

{% block content %}
    {{ form_errors(form) }}
    <div class="col-md-7 col-lg-12">
        <h4 class="mb-3">Formularz kontaktowy</h4>

            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate' : 'novalidate'}}) }}
            <div class="row g-3">

                <div class="col-sm-6">
                    <label for="firstName" class="form-label">{{ form_label(form.firstName) }}</label>
                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                    <span style="color: red;">{{ form_errors(form.firstName) }}</span>
                    <div class="invalid-feedback">
                        Podaj imię
                    </div>
                </div>

                <div class="col-sm-6">
                    <label for="lastName" class="form-label">{{ form_label(form.lastName) }}</label>
                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                    <span style="color: red;">{{ form_errors(form.lastName) }}</span>
                    <div class="invalid-feedback">
                        Podaj nazwisko
                    </div>
                </div>

                <div class="col-12">
                    <label for="email" class="form-label">{{ form_label(form.email) }}</label>
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    <span style="color: red;">{{ form_errors(form.email) }}</span>
                    <div class="invalid-feedback">
                        Podaj adres e-mail
                    </div>
                </div>

                <div class="col-12">
                    <label for="subiect" class="form-label">{{ form_label(form.subiect) }}</label>
                    {{ form_widget(form.subiect, {'attr': {'class': 'form-control'}}) }}
                    <span style="color: red;">{{ form_errors(form.subiect) }}</span>
                    <div class="invalid-feedback">
                        Wybierz temat
                    </div>
                </div>

                <div class="col-12">
                    <label for="message" class="form-label">{{ form_label(form.message) }}</label>
                    {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                    <span style="color: red;">{{ form_errors(form.message) }}</span>
                    <div class="invalid-feedback">
                        Podaj treść wiadomości
                    </div>
                </div>
                {{ form_rest(form) }}
            </div>

            <hr class="my-4">

            <button class="w-100 btn btn-primary btn-lg" type="submit">Wyślij wiadomość</button>
        {{ form_end(form) }}
    </div>
{% endblock %}